<resources>
    <style name="NavigationViewStyle">
        <item name="android:background">?attr/colorPrimary</item> <!-- Use theme-aware color -->
        <item name="android:textColorPrimary">?android:attr/textColorPrimary</item> <!-- Use theme-aware text color -->
    </style>
    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="Theme.MyApplication.NoActionBar" parent="Theme.MyApplication">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyApplication.Splash" parent="Theme.MyApplication">
        <item name="android:windowBackground">@color/splash_bg</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>



</resources>